function verifyLink() {
    const urlInput = document.getElementById('youtube-url');
    const resultContainer = document.getElementById('result');
    const url = urlInput.value.trim();
    
    // Clear previous results
    resultContainer.style.display = 'none';
    resultContainer.className = 'result-container';
    
    if (!url) {
        showResult('Please enter a YouTube URL', 'fake');
        return;
    }
    
    // Basic YouTube URL validation
    const youtubeRegex = /^(https?:\/\/)?(www\.)?(youtube\.com|youtu\.be)\/.+/;
    
    if (!youtubeRegex.test(url)) {
        showResult('This is not a valid YouTube URL', 'fake');
        return;
    }
    
    // Simulate verification process (placeholder for now)
    showResult('Analyzing link...', 'analyzing');
    
    setTimeout(() => {
        // For demo purposes, randomly determine if link is real or fake
        // In a real app, this would connect to actual verification APIs
        const isReal = Math.random() > 0.3; // 70% chance of being real for demo
        
        if (isReal) {
            showResult('✅ This appears to be a legitimate YouTube link', 'real');
        } else {
            showResult('⚠️ Warning: This link may be suspicious or fake', 'fake');
        }
    }, 2000);
}

function showResult(message, type) {
    const resultContainer = document.getElementById('result');
    resultContainer.textContent = message;
    resultContainer.className = `result-container result-${type}`;
    resultContainer.style.display = 'block';
}

// Add enter key support for the input field
document.getElementById('youtube-url').addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
        verifyLink();
    }
});

// Smooth scrolling for navigation links
document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
            target.scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }
    });
});
